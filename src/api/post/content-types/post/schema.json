{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "media": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "cover_img": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "slug": {
      "type": "string"
    },
    "post_tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post-tag.post-tag",
      "mappedBy": "posts"
    },
    "post_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post-category.post-category",
      "mappedBy": "posts"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "posts"
    }
  }
}
